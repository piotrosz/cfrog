@page "/recipe-add"

<AuthorizeView>
    <Authorized>
        <form method="post" @onsubmit="Submit" @formname="recipe-add-form">
            <AntiforgeryToken/>
            <div class="mb-3">
                <label asp-for="txtTitle" for="txtTitle" class="form-label">Tytuł</label>
                <InputText type="text" class="form-control" id="txtTitle" placeholder=""
                           @bind-Value="Model!.Title"/>
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="txtTimeToPrepare" class="form-label">Czas</label>
                <InputText type="text" class="form-control" id="txtTimeToPrepare" placeholder=""
                           @bind-Value="Model!.TimeToPrepare"/>
            </div>
            <div class="mb-3">
                <label for="txtIngredients" class="form-label">Składniki</label>
                <InputTextArea class="form-control" id="txtIngredients" rows="6"
                               @bind-Value="Model!.Ingredients"></InputTextArea>
            </div>
            <div class="mb-3">
                <label for="txtSteps" class="form-label">Co robić</label>
                <InputTextArea class="form-control" id="txtSteps" rows="6"
                               @bind-Value="Model!.Steps"></InputTextArea>
            </div>
            <button type="submit">Submit</button>
        </form>        
    </Authorized>
</AuthorizeView>
