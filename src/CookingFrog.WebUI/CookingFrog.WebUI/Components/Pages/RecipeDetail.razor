@page "/recipe/{Guid}"

@attribute [StreamRendering]
@rendermode InteractiveServer

@if(Recipe == null)
{
    <div class="alert alert-info" role="alert">
        Ładowanie strony...
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-check form-switch">
                    <InputCheckbox 
                        class="form-check-input" 
                        type="checkbox" 
                        role="switch" 
                        id="flexSwitchCheckDefault"
                        @bind-Value=_showEditButtons/>
                    <label class="form-check-label" for="flexSwitchCheckDefault">Edit mode</label>
                </div>
            </div>
        </div>
        <div class="row gy-2 g-2">
            <div class="col-sm-12">
                <TitleEdit Title="@Recipe.Summary"
                           UpdateTitleClicked="UpdateSummary"/>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Składniki</h5>
                    </div>
                    <div class="card-body">
                        @{
                            var ingredientIndex = 0;
                            var groupIndex = 0;
                        }
                        @foreach (var ingredientGroup in Recipe.IngredientsGrouped)
                        {
                            foreach (var ingredient in ingredientGroup)
                            {
                                <IngredientEdit
                                    Index="ingredientIndex"
                                    Ingredient="ingredient"
                                    GroupIndex="groupIndex"
                                    ShowEditButtons="_showEditButtons"
                                    UpdateClicked="UpdateIngredient"
                                    DeleteClicked="DeleteIngredient"/>
                                {
                                    ingredientIndex++;
                                }
                            }

                            groupIndex++;
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row gy-2 g-2">
            @if (_showEditButtons)
            {
                <button class="btn btn-sm btn-toolbar"
                        data-bs-toggle="modal"
                        @onclick="ShowAddIngredientModal">➕</button>
            }
        </div>

        <div class="row gy-2 g-2">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">
                            Co robić
                        </h5>
                    </div>
                    <div class="card-body">
                        @{ var stepIndex = 0; }
                        @foreach (var step in Recipe.Steps)
                        {
                            <StepEdit Index="stepIndex"
                                      Description="@step.Description"
                                      UpdateClicked="UpdateStep"
                                      DeleteClicked="DeleteStep"
                                      ShowEditButtons="_showEditButtons"/>
                            {
                                stepIndex++;
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row gy-2 g-2">
            @if (_showEditButtons)
            {
                <button class="btn btn-sm btn-toolbar"
                        data-bs-toggle="modal"
                        @onclick="ShowAddStepModal">➕</button>
            }
        </div>
    </div>
    
    <IngredientAddModal AddClicked="AddIngredient"/>
    <StepAddModal AddClicked="AddStep"/>
}