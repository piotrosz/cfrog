@page "/recipe/{Guid}"
@inject IRecipesReadRepo RecipesRepo
@attribute [StreamRendering]

@rendermode InteractiveServer

@if(Recipe == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container" b>
        <div class="row gy-2 g-2">
            <div class="col-sm-12">
                @if (_isSummaryEditMode == false)
                {
                    <h2 @onclick="SummaryEdit">@Recipe.Summary</h2>
                }
                else
                {
                    <div class="mb-3">
                        <InputText
                            type="text"
                            class="form-control"
                            id="txtTitle"
                            placeholder=""
                            maxlength="400"
                            style="width: 350px"
                            @bind-Value="@_recipeSummaryForEdit"/>
                    </div>
                    <div class="mb-3">
                        <button type="button" class="btn btn-primary btn-sm" @onclick="UpdateSummary">Zapisz</button>
                    </div>
                }
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Składniki</h5>
                        <ul class="list-group list-group-flush">
                            @foreach (var ingredient in Recipe.Ingredients)
                            {
                                <li class="list-group-item">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="@ingredient.Name">
                                        <label class="form-check-label" for="@ingredient.Name">
                                            <IngredientDisplay ingredient="@ingredient"/>
                                        </label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gy-2 g-2">

            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Co robić</h5>
                        <ul class="list-group list-group-flush">
                            @{ int i = 0; }
                            @foreach (var step in Recipe.Steps)
                            {
                                {
                                    i++;
                                }
                                <li class="list-group-item">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="step@(i)">
                                        <label class="form-check-label" for="step@(i)">
                                            @step.Description
                                        </label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}